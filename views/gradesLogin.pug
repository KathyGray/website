extends layout

block css
  script(src='/js/validator.min.js', defer)

block content
  div(class="col-md-6 col-md-offset-3")
    if message != ""
      div(class="alert alert-success alert-dismissable" role="alert")
        button(type="button" class="close" data-dismiss="alert" aria-label="Close")
          span(aria-hidden="true")
            | &times;
        | #{message}
    if (typeof(origin) !== 'undefined')
      form(action="/gradesLogin" method="post" role="form" data-toggle="validator")
        input(type="hidden" name="_csrf" value=csrfToken)
        div(class="form-group")
          input(type="hidden" name="origin" value=origin)
        div(class="form-group has-feedback")
          label(for="inputUsername" class="control-label" type="hidden") username
          input(type="username" name="user" class="form-control" id="inputUsername" placeholder="username" data-error="Invalid username." maxlength="35" data-minlength="6" required autofocus)
          span(class="glyphicon form-control-feedback" aria-hidden="true")
          div(class="help-block with-errors")
        button(class="btn btn-md btn-primary btn-block" type="submit")
            | sign in
